# Include configuration files in package
include README.md
include LICENSE
include requirements/*.txt
recursive-include configs *.yaml *.json
recursive-include docs *.md
recursive-include examples *.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .git*
global-exclude *.log
global-exclude logs/*
global-exclude data/*
global-exclude .env
global-exclude *.egg-info

